@using CustomerCrm.Core.Models
@model EmployeeModel
<form asp-action="Create" asp-controller="Employee" method="post">
    <div class="row">
        <div class="col-3 mb-3">
            <label for="text-first">First Name</label>
            <input type="text" id="text-first" name="FirstName" class="form-control" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="col-3 mb-3">
            <label for="text-last">Last Name</label>
            <input type="text" id="text-Last" name="LastName" class="form-control" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="col-3 mb-3">
            <label for="text-title">Title</label>
            <input type="text" id="text-title" name="Title" class="form-control" />
            <span asp-validation-for="Title"></span>
        </div>
        <div class="col-3 mb-3">
            <label for="text-birth">Birth Date</label>
            <input type="text" id="text-birth" name="BirthDate" class="form-control" />
            <span asp-validation-for="BirthDate"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-3 mb-3">
            <label for="text-address">Address</label>
            <input type="text" id="text-address" name="Address" class="form-control" />
            <span asp-validation-for="Address"></span>
        </div>
        <div class="col-3 mb-3">
            <label for="text-city">City</label>
            <input type="text" id="text-city" name="City" class="form-control" />
            <span asp-validation-for="City"></span>
        </div>
        <div class="col-3 mb-3">
            <label for="text-region">Region</label>
            <input type="text" id="text-region" name="Region" class="form-control" />
            <span asp-validation-for="Region"></span>
        </div>
        <div class="col-3 mb-3">
            <label for="text-postal">Postal Code</label>
            <input type="text" id="text-postal" name="PostalCode" class="form-control" />
            <span asp-validation-for="PostalCode"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-4 mb-3">
            <label for="text-country">Country</label>
            <input type="text" id="text-country" name="Country" class="form-control" />
            <span asp-validation-for="Country"></span>
        </div>
        <div class="col-4 mb-3">
            <label for="text-phone">Phone</label>
            <input type="text" id="text-phone" name="Phone" class="form-control" />
            <span asp-validation-for="Phone"></span>
        </div>
        <div class="col-4 mb-3">
            <label for="text-photo">Photo Path</label>
            <input type="text" id="text-photo" name="PhotoPath" class="form-control" />
            <span asp-validation-for="PhotoPath"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-success" value="save">Submit</button>
</form>